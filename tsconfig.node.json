//tsconfig.node.json
{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "baseUrl": "./",
      "resolveJsonModule": true
    },
    "include": ["create-schema-content-only.ts", "src/**/*.ts", "scripts/**/*"],
    "exclude": ["node_modules", "dist"]
  }